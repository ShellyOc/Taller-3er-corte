<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Cubos en THREE.JS</title>

    <style>
        body { margin: 0; overflow: hidden; background: #111; }
    </style>

    <!-- THREE.js desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.min.js"></script>
</head>
<body>

<script>

// CREAR ESCENA
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
camera.position.z = 6;

const renderer = new THREE.WebGLRenderer({ antialias: true });
renderer.setSize(window.innerWidth, window.innerHeight);
document.body.appendChild(renderer.domElement);


// MATERIALES Y CUBOS
const material = new THREE.MeshPhongMaterial({
    color: 0x66ccff,
    transparent: true,
    opacity: 0.5
});

// CUBO GRANDE
const grande = new THREE.Mesh(
    new THREE.BoxGeometry(3, 3, 3),
    material
);

// CUBO PEQUEÑO
const pequeño = new THREE.Mesh(
    new THREE.BoxGeometry(1.5, 1.5, 1.5),
    material
);

scene.add(grande);
scene.add(pequeño);

// Luz
const light = new THREE.DirectionalLight(0xffffff, 1);
light.position.set(3, 4, 5);
scene.add(light);

// MODO ACTUAL (T, R o S)
let modo = "T";  // traslación por defecto

document.addEventListener("keydown", (e) => {

    if (e.key === "t" || e.key === "T") modo = "T";
    if (e.key === "r" || e.key === "R") modo = "R";
    if (e.key === "s" || e.key === "S") modo = "S";

    let obj = grande; // objeto a transformar

    // TRASLACIÓN
    if (modo === "T") {
        if (e.key === "ArrowUp") obj.position.y += 0.1;
        if (e.key === "ArrowDown") obj.position.y -= 0.1;
        if (e.key === "ArrowLeft") obj.position.x -= 0.1;
        if (e.key === "ArrowRight") obj.position.x += 0.1;
    }

    // ROTACIÓN
    if (modo === "R") {
        if (e.key === "ArrowUp") obj.rotation.x -= 0.1;
        if (e.key === "ArrowDown") obj.rotation.x += 0.1;
        if (e.key === "ArrowLeft") obj.rotation.y -= 0.1;
        if (e.key === "ArrowRight") obj.rotation.y += 0.1;
    }

    // ESCALA

    if (modo === "S") {
        if (e.key === "ArrowUp") obj.scale.y += 0.1;
        if (e.key === "ArrowDown") obj.scale.y -= 0.1;
        if (e.key === "ArrowLeft") obj.scale.x -= 0.1;
        if (e.key === "ArrowRight") obj.scale.x += 0.1;
    }
});

// ANIMACIÓN
function render() {
    requestAnimationFrame(render);
    renderer.render(scene, camera);
}

render();
</script>

</body>
</html>
